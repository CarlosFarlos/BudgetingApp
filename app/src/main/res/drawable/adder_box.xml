<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Background color (light gray) -->
            <corners android:radius="8dp" /> <!-- Corner radius in dp -->
        </shape>
    </item>

    <!-- Border (optional) -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for border -->
            <stroke android:width="2dp" android:color="@color/logo_yellow" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
